<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bcgroundregis">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/logotele2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Create Your Account"
            android:textColor="@color/putih"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <EditText
                android:id="@+id/edtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:textColor="@color/fontbiru"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtname" />

            <EditText
                android:id="@+id/edtnohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="No Telepon / HP"
                android:inputType="number"
                android:maxLength="13"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtemail" />

            <EditText
                android:id="@+id/edtalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Alamat"
                android:inputType="text"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtnohp" />

            <EditText
                android:id="@+id/edttempatlahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Tempat Lahir"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtalamat" />

            <EditText
                android:id="@+id/edttgllahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Tanggal Lahir"
                android:inputType="date"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edttempatlahir" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edttgllahir"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/fontabu">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/fontabu"
                    android:fontFamily="@font/arial_narrow"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:textColor="@color/fontabu"
                    android:textColorHint="@color/fontabu"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/checkterms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/putih"
                android:textColorHint="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordLayout"
                android:layout_marginLeft="68dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/clemente_light"
                android:text="Agree With"
                android:textColor="@color/putih"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/checkterms"
                app:layout_constraintStart_toEndOf="@+id/checkterms"
                app:layout_constraintTop_toTopOf="@+id/checkterms" />

            <TextView
                android:id="@+id/txtterms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/clemente_light"
                android:text="Terms and Condition"
                android:textColor="@color/fontbiru"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stylebutton1"
        android:fontFamily="@font/clemente_light"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/putih"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView99"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/clemente_light"
        android:text="Already have an account?"
        android:textColor="@color/putih"
        android:textSize="13sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/clemente_light"
            android:text="Login"
            android:layout_marginLeft="5dp"
            android:textColor="@color/fontbiru"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView99"
            app:layout_constraintStart_toEndOf="@+id/textView99"
            app:layout_constraintTop_toTopOf="@+id/textView99" />


</androidx.constraintlayout.widget.ConstraintLayout>