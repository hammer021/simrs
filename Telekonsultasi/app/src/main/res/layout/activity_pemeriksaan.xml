<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PemeriksaanActivity"
    android:background="@drawable/bcgroundfull">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backpage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/arial_narrow"
        android:text="Pemeriksaan"
        android:textColor="@color/putih"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">
        <!-- android:layout_height="550dp" -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <EditText
                android:id="@+id/edtnamapasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:textColor="@color/fontbiru"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edttempatlahirpsn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Tempat Lahir"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtnamapasien" />

            <EditText
                android:id="@+id/edttgllahirpsn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Tanggal Lahir"
                android:inputType="date"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edttempatlahirpsn" />

            <EditText
                android:id="@+id/edtumur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Umur"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edttgllahirpsn" />

            <EditText
                android:id="@+id/edketerbatasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Keterbatasan (Tunarungu, Tunawicara, Tunanetra, dll)"
                android:inputType="text"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtumur" />

            <EditText
                android:id="@+id/edtjeniskelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Jenis Kelamin"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edketerbatasan" />

            <EditText
                android:id="@+id/edtwarganegara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Warga Negara"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtjeniskelamin" />

            <EditText
                android:id="@+id/edtstatusperkawinan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Status Perkawinan (Kawin / Belum Kawin)"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtwarganegara" />

            <EditText
                android:id="@+id/edtpendidikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Pendidikan Terakhir"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtstatusperkawinan" />

            <EditText
                android:id="@+id/edtagama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Agama"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtpendidikan" />

            <EditText
                android:id="@+id/edtpekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Pekerjaan"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtagama" />

            <EditText
                android:id="@+id/edtnonik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Nomor KTP (NIK)"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtpekerjaan" />

            <EditText
                android:id="@+id/edtalamatpasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Alamat Pasien"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtnonik" />

            <EditText
                android:id="@+id/edtnotelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Nomor Telepon"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtalamatpasien" />

            <EditText
                android:id="@+id/edtnamaayah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Nama Ayah"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtnotelp" />

            <EditText
                android:id="@+id/edtnamaibu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Nama Ibu"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtnamaayah" />

            <EditText
                android:id="@+id/edthubunganpasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fontabu"
                android:fontFamily="@font/arial_narrow"
                android:hint="Hubungan dengan Pasien (Saudara/Teman/dll)"
                android:inputType="textPersonName"
                android:textColor="@color/fontabu"
                android:textColorHint="@color/fontabu"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtnamaibu" />

            <Button
                android:id="@+id/btnsimpanpemeriksaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stylebutton1"
                android:fontFamily="@font/clemente_light"
                android:text="Simpan"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                android:textColor="@color/putih"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edthubunganpasien"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>